{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "LLM": {
    "OpenAI": {
      "ApiKey": "",
      "Model": "gpt-4o-mini",
      "Temperature": 0.7,
      "MaxTokens": 1000,
      "BaseUrl": "https://platform.openai.com/v1"
    },
    "Anthropic": {
      "ApiKey": "",
      "Model": "claude-3-haiku-20240307",
      "Temperature": 0.7,
      "MaxTokens": 1000
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}